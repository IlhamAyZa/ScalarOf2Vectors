#include<stdio.h>
#include <cmath>
using namespace std;

int main()
{
    int x, y, n, scal;

    printf("Enter vector space : ");
    scanf("%d", &n);

    for (int i = 0; i < n; i++){
        printf("Enter X and Y for the vector => \n");

        printf("X : ");
        scanf("%d", &x);

        printf("Y : ");
        scanf("%d", &y);
        scal += y*x;

    }

    printf("Scalar : %f", scal);
}
