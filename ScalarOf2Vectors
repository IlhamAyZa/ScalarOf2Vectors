#include<stdio.h>
#include <cmath>
using namespace std;

int main()
{
    int x1, x2, y1, y2 ;
    float scal;

    printf("Enter X and Y for the 1st vector => \n");

    printf("X : ");
    scanf("%d", x1);
    printf("Y : ");
    scanf("%d", y1);

    printf("Enter X and Y for the 2nd vector => \n");

    printf("X : ");
    scanf("%d", x2);
    printf("Y : ");
    scanf("%d", y2);

    scal = sqrt((x1+x2)**2 + (y1+y2)**2);
    printf("Scalar : %f", scal);

}
