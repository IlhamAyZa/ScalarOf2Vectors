#include<stdio.h>
#include <cmath>
using namespace std;

int main()
{
    int x, n;
    float scal;

    printf("Enter vector space : ");
    scanf("%d", &n);

    int components[n];


    printf("Enter components for the 1st vector => \n");

    for (int j =0; j < n; j++){
        scanf("%d", &components[j]);
    }

    printf("Enter components for the 2nd vector => \n");

    for (int i =0; i < n; i++){
        scanf("%d", &x);
        scal += x * components[i];
    }

    printf("Scalar : %f", scal);

    return 0;
}
